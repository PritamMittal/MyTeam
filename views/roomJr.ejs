<head>
  <meta charset="UTF-8" />
  <!-- styling the ejs page -->
  <style>
    body {
      padding: 0px;
      margin: 0px;
      max-height: 100%;
    }

    .joinDepartment {
      visibility: hidden;
    }

    .main {
      display: flex;
      min-height: 100vh;
      max-height: 1000px;
    }

    .main__left {

      display: flex;
      width: 0px;
      flex-direction: column;
    }

    .main__leftVideo {
      background-color: #B5EAEA;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-grow: 1;
      flex: 0.95;
    }

    .main__leftControls {
      flex: 0.05;
    }

    .main__right {
      flex: 30;
      width: 0px;
      max-height: 100%;
    }

    #video-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      display: none;
    }

    video {
      margin: 7px;
      height: 262.5px;
      width: 350px;
      object-fit: contain;
    }

    .main__leftControls {

      justify-content: center;
      align-content: center;
      color: #EDF6E5;
      background-color: #F38BA0;
      display: flex;
      padding: 10px;
    }

    .main__leftControls__Block {
      align-items: center;
      display: flex;
    }

    .main__leftControls__Buttons>span {
      padding-top: 5px;
    }

    .main__leftControls__Buttons {
      margin-top: 16px;
      align-items: center;
      justify-content: center;
      padding: 5px;

      display: flex;
      flex-direction: column;
      cursor: pointer;
      min-width: 80px;
    }

    .main__leftControls__Buttons:hover {
      color: #D3D3D3;
      border-radius: 5px;
    }

    .main__leftControls__Buttons>i {
      margin-bottom: 5px;
      font-size: large;
    }

    .main__leftControls__ButtonsLeave {
      align-items: center;
      justify-content: center;
      padding: 8px 10px;
      display: flex;
      flex-direction: column;
      cursor: pointer;
      min-width: 80px;
      border-radius: 5px;
      color: #eb534b !important;
      height: 60%;
      margin-right: 10px;
      transition: all 250ms ease-in-out;
    }

    .main__leftControls__ButtonsLeave:hover {
      background-color: white;
      color: #d2d2d2;
      border: white 3px solid;
      border-radius: 20px;
    }

    .main__right {
      color: black;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background-color: #FFBCBC;
    }

    .main__rightHeader {
      text-align: center;
      flex: 0.05;
      width: 100%;
      background-color: #FFBCBC;
      padding-top: 10px;
      padding-bottom: 10px;
    }

    .main__chatWindow {
      width: 100%;
      background-color: #EDF6E5;
      height: 602px;
      overflow-y: scroll;
    }

    .main__messageContainer {
      width: 100%;
    }

    .main__messageContainer input {
      width: 90%;
      padding: 10px;
      background-color: transparent;
      border: none;
      color: black;

    }

    .leaveMeeting {
      color: white;
      text-decoration: none !important;
    }

    .leaveMeeting:hover {
      color: #d2d2d2 !important;
    }

    .main__messageContainer input:focus {
      outline: none;
    }

    .messages {
      padding-inline-start: 10px;
      color: black;
      list-style: none;
      line-height: 200%;
    }

    .unmute {
      color: #cc3b33;
    }

    .leave-call {
      margin-left: 11px;
    }

    video:hover {
      border: 4px solid white;
    }

    .endCall {
      height: 32px;
      width: 40px;
    }

    #datetime {
      font-size: 1.33rem;
    }

    .dtb {
      margin-top: 23px;
      color: #dbdbda;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      padding: 50px;
      left: 0;
      top: 0;
      width: 400px;
      height: 300px;
      overflow: auto;
      background-color: rgb(0, 0, 0);
      background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
      background-color: #fefefe;
      margin: auto;
      padding: 20px;
      border: 1px solid #888;
    }

    .close {
      color: #aaaaaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }

    .close:hover,
    .close:focus {
      color: #000;
      text-decoration: none;
      cursor: pointer;
    }

    .columnCard {
      float: left;
      padding: 0 10px;
    }

    .rowCard {
      margin: 0 -5px;
      align-items: center;
    }

    .rowCard:after {
      content: "";
      display: table;
      clear: both;
    }

    .card {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      padding: 30px;
      padding-right: 10px;
      text-align: center;
      background-color: #f1f1f1;
      width: 285px;
      height: 400px;
      margin-top: 10px;
      margin-bottom: 10px;

    }

    .modal-content:hover {
      background-color: #f5f5f5;
    }

    .myBtn:hover {
      color: #000;
    }

    #leaveRoomButton {
      display: none;
    }
  </style>
